{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true,
    "jquery": true
  },
  "extends": "airbnb",
  "plugins": ["json"],
  "rules": {
    // disabling indentation checks
    "indent": 0,
    "max-len": ["error", 250],
    "react/jsx-indent": 0,
    "comma-dangle": ["error", "never"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "style|bootstrap" }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "object-curly-spacing": [0, "never"],
    "react/jsx-indent-props": 0,
    "react/jsx-tag-spacing": 0,
    "react/forbid-prop-types": 0,
    "no-trailing-spaces": 0,
    "import/no-named-as-default": 0
  }
}
